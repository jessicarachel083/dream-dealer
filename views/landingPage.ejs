<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>landingPage</title>
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        />
    </head>
    <body>
        <%- include('_navBar') %>

        <!-- welcoming -->
        <div class="bg-primary text-white py-4">
            <div class="container text-center">
                <h1 class="display-5 mb-2">Welcome to Dream-Dealer!</h1>
                <p class="lead">One Stop Solution For your Sweet Dream</p>
            </div>
        </div>

        <!-- hot item -->
        <div class="container py-4">
            <h3 class="mb-4">
                <i class="fas fa-fire text-primary"></i> Hot Items
            </h3>
            <!-- cart  -->
            <div class="row d-flex flex-wrap">
                <% data.forEach(el => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img
                            class="card-img-top"
                            src="<%= el.imageUrl %>"
                            alt="Photo"
                        />
                        <div class="card-body">
                            <h5 class="card-title"><%= el.name %></h5>
                            <p class="card-text"><%= el.description %></p>
                            <p class="text-danger mb-1">
                                <%= formatPrice(el.price) %>
                            </p>
                            <% if (userId) { %>
                            <a
                                href="/<%= el.id %>/addtocart"
                                class="btn btn-primary"
                                >Add To Cart</a
                            >
                            <% } else { %>
                            <a href="/login" class="btn btn-primary"
                                >Add To Cart</a
                            >

                            <% } %>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
        <!-- Features -->
        <div class="row text-center mt-5">
            <div class="col-md-4">
                <i class="fas fa-truck fs-3 text-primary"></i>
                <h6 class="mt-2">Free Shipping</h6>
            </div>
            <div class="col-md-4">
                <i class="fas fa-shield-alt fs-3 text-primary"></i>
                <h6 class="mt-2">Secure Payment</h6>
            </div>
            <div class="col-md-4">
                <i class="fas fa-undo fs-3 text-primary"></i>
                <h6 class="mt-2">Easy Returns</h6>
            </div>
        </div>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />

        <%- include('_link') %>
    </body>
</html>
